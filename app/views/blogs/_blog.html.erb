<div class="row">
  <div class="col s12 m12">
    <div class="card-panel pink lighten-5 z-depth-5">
      <div class="card-content black-text">
        <p><%= simple_format(blog.text) %></p>
        <p>投稿者: <%= blog.user.nickname %></p>
        <span style="color: gray">
        <p>投稿日<%= blog.created_at.strftime("%Y年%m月%d日 %H時%M分") %></p>
      </span>
      </div>
      <div class="card-action">
        <ul class="more_list white-text">
          <div class="clearfix">
          <li class="more_list1 waves-effect waves-light btn pink z-depth-5">
            <%= link_to "詳細", "/blogs/#{blog.id}", method: :get %>
          </li>
          <% if user_signed_in? && current_user.id == blog.user_id %>
          <li class="more_list1 waves-effect waves-light btn pink z-depth-5">
            <%= link_to '編集', "/blogs/#{blog.id}/edit", method: :get %>
          </li>
          <li class="more_list1 waves-effect waves-light btn pink z-depth-5">
            <%= link_to '削除', "/blogs/#{blog.id}", method: :delete, data: {confirm: "本当に削除しますか"} %>
         </li>
       </div>
        </ul>
        <% end %>
            </div>
          </div>
        </div>
      </div>
